<script>
/* ================= QUESTIONS ================= */
const questions = [
{type:"tf",q:"Neonates lose heat faster due to thin skin and low subcutaneous fat.",a:true},
{type:"tf",q:"Skin-to-skin contact helps prevent neonatal hypothermia.",a:true},
{type:"tf",q:"Organic constipation has no underlying disease.",a:false},
{type:"tf",q:"Hypothyroidism can cause constipation in children.",a:true},
{type:"tf",q:"Protein-energy malnutrition includes kwashiorkor and marasmus.",a:true},
{type:"tf",q:"Kwashiorkor commonly presents with muscle wasting without edema.",a:false},
{type:"tf",q:"Marasmus children appear with old man facies.",a:true},
{type:"tf",q:"Neonatal bleeding may present with intracranial hemorrhage.",a:true},
{type:"tf",q:"Low Apgar score is a sign of birth asphyxia.",a:true},
{type:"tf",q:"Congenital heart disease is always symptomatic at birth.",a:false},

/* MCQs example (full set continues) */
{type:"mcq",q:"The normal delivery room temperature to prevent hypothermia should be:",o:["20Â°C","22Â°C","25Â°C","30Â°C"],a:2},
{type:"mcq",q:"Which newborn is at highest risk of hypothermia?",o:["Term infant","Post-term infant","Premature infant","Macrosomic infant"],a:2}
];

/* ================= STATE ================= */
let i=0;
let answers = Array(questions.length).fill(null);
let time=40*60;

/* TIMER */
setInterval(()=>{
  let m=Math.floor(time/60), s=time%60;
  timer.innerText=`${m}:${s<10?"0":""}${s}`;
  time--;
  if(time<0) finish();
},1000);

function updateCounter(){
  answered.innerText = answers.filter(a=>a!==null).length;
  remaining.innerText = questions.length - answered.innerText;
}

function showQ(){
  const q=questions[i];
  const sel=answers[i];
  nextBtn.disabled = sel===null;

  let html=`<div class="question">${q.q}</div>`;

  if(q.type==="tf"){
    html+=`
      <div class="option ${sel===true?"selected":""} ${sel!==null?"disabled":""}" onclick="choose(true)">True</div>
      <div class="option ${sel===false?"selected":""} ${sel!==null?"disabled":""}" onclick="choose(false)">False</div>`;
  }else{
    q.o.forEach((op,idx)=>{
      html+=`<div class="option ${sel===idx?"selected":""} ${sel!==null?"disabled":""}" onclick="choose(${idx})">${op}</div>`;
    });
  }

  if(sel!==null){
    const correct = sel===q.a;
    html+=`<div class="feedback ${correct?"correct":"wrong"}">
      ${correct?"âœ”ï¸ Correct":"ğŸ˜ Wrong"}
    </div>`;
  }

  box.innerHTML=html;
  updateCounter();
}

function choose(v){
  if(answers[i]!==null) return;
  answers[i]=v;
  showQ();
}

function nextQ(){
  if(i<questions.length-1){i++;showQ();}
  else finish();
}
function prevQ(){if(i>0){i--;showQ();}}

function finish(){
  let correct=0;
  answers.forEach((a,idx)=>{if(a===questions[idx].a)correct++;});
  document.body.innerHTML=`
    <header>
      <div class="logo">Gaith Team</div>
      <div class="slogan">Ø§Ù„Ø¥Ù…ØªØ­Ø§Ù† ÙÙŠ Ø¬ÙŠØ¨Ùƒ</div>
    </header>
    <div class="container">
      <div class="card" style="text-align:center">
        <p style="color:green;font-size:22px;font-weight:900">Correct: ${correct}</p>
        <p style="color:red;font-size:22px;font-weight:900">Wrong: ${questions.length-correct}</p>
        <p style="font-size:20px">Score: ${Math.round(correct/questions.length*100)}%</p>
        <p style="margin-top:16px;font-size:22px;font-weight:900;color:#0891b2">
          ÙØ®ÙˆØ±ÙŠÙ† Ø¨ÙŠÙƒ ÙˆØ£Ø´Ø·Ø± Ø´Ø·ÙˆØ± ğŸŒŸ
        </p>
      </div>
    </div>`;
}

showQ();
</script>

